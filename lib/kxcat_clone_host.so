clone_host() {
    local hostname opt
    opt=($*)
    if (( ${#opt[*]} < 4 )); then
         echo "${FUNCNAME} <base node> <hostname> <ip> <mac>"
         exit
    fi

    base_host=$1
    hostname=$2
    ip=$3
    mac=$4

    mkdef -t node $hostname --template $base_host ip=$ip mac=$mac
}
