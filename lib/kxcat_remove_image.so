remove_image() {
    local hostname opt
    opt=($*)
    if (( ${#opt[*]} < 1 )); then
         echo "${FUNCNAME} <image name> [<image name2>...]"
         exit
    fi

    for image in $*; do
       rmdef -t osimage ${image}
    done
}
