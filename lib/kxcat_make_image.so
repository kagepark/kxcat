make_image() {
    local hostname opt
    opt=($*)
    if (( ${#opt[*]} < 1 )); then
         echo "${FUNCNAME} <ISO File> | -d <CD-ROM Device>"
         exit
    fi

    if [ "${opt[1]}" == "-d" ]; then
       shift 1
       image_file=$1
       [ -b "$image_file" ] || error_exit "$image_file device not found"
    else
       image_file=$1
       [ -f "$image_file" ] || error_exit "$image_file file not found"
    fi

    copycds $image_file
}
